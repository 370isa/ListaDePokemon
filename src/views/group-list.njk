{% extends 'layout.njk' %}

{% block content %}
  <div class="list-page">
    <div class="d-flex align-items-center mb-4">
      <i class="image image-2 pokeborder pokeborder-radius-100 pokeborder-purple"></i>
      <h1 class="text-capitalize">{{ uri }} - {{ category }}</h1>
    </div>
    <div class="table-list">
      <div class="grid">
        {% for item in items %}
          <div class="d-flex flex-column align-items-center">
            <img src="{{ item.img }}" alt="{{ item.name }}" id="{{ item.id }}" class="link-id grid-image pokeborder pokeborder-radius-100 pokeborder-purple">
            <span class="mt-2 fw-bold text-center">{{ item.name }}</span>
          </div>
        {% endfor %}
      </div>
      <div class="d-flex gap-3 justify-content-end me-4 my-3">
        <a class="btn btn-back" onclick="voltar()">Back</a>
        <a href="/" class="btn btn-home">Home</a>
      </div>
    </div>
  </div>
{% endblock %}