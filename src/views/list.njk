{% extends 'layout.njk' %}

{% block content %}
  <div class="list-page">
    <h1>Pokem√≥ns List</h1>

    <div class="table-list">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="cat-table">Num</th>
            <th class="cat-table">Name</th>
            <th class="cat-table">Candy</th>
          </tr>
        </thead>
        <tbody>
          {% for item in items %}
            <tr class="item-list" id="{{ item.id }}">
              <th>{{ item.num }}</th>
              <td>{{ item.name }}</td>
              <td>{{ item.candy }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}